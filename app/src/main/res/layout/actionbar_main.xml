<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/action_layout_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.15"
            android:background="@mipmap/ic_launcher_round"
            android:visibility="gone" />

        <Button
            android:id="@+id/action_btn_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.85"
            android:background="@android:color/transparent"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:text="夜间模式"
            android:theme="@style/AppTheme.ActionBarItem" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/nav_back_color_white" />

    <LinearLayout
        android:id="@+id/action_layout_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.15"
            android:background="@mipmap/ic_launcher_round"
            android:visibility="gone" />

        <Button
            android:id="@+id/action_btn_store"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.85"
            android:background="@android:color/transparent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="书籍推荐"
            android:theme="@style/AppTheme.ActionBarItem" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/nav_back_color_white" />

    <LinearLayout
        android:id="@+id/action_layout_happy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.15"
            android:background="@mipmap/ic_launcher_round"
            android:visibility="gone" />

        <Button
            android:id="@+id/action_btn_happy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_weight="0.85"
            android:background="@android:color/transparent"
            android:text="开心一刻"
            android:theme="@style/AppTheme.ActionBarItem" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/nav_back_color_white" />

    <LinearLayout
        android:id="@+id/action_layout_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.15"
            android:background="@mipmap/ic_launcher_round"
            android:visibility="gone" />

        <Button
            android:id="@+id/action_btn_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.85"
            android:background="@android:color/transparent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="分享"
            android:theme="@style/AppTheme.ActionBarItem" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/nav_back_color_white" />

    <LinearLayout
        android:id="@+id/action_layout_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.15"
            android:background="@mipmap/ic_launcher_round"
            android:visibility="gone" />

        <Button
            android:id="@+id/action_btn_about"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.85"
            android:background="@android:color/transparent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="关于"
            android:theme="@style/AppTheme.ActionBarItem" />
    </LinearLayout>

</LinearLayout>